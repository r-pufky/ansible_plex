[Unit]
Description=Automatically repair Plex Media Server DB.
Requires=plex_repair.timer

[Service]
Type=oneshot
ExecStart=/opt/plex/DBRepair.sh update stop check repair reindex prune purge deflate start exit
User=root
Group=root
Environment="DBREPAIR_CACHEAGE=30"
Environment="DBREPAIR_PAGESIZE=4096"

[Install]
WantedBy=multi-user.target